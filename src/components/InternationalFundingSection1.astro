        >
          {
            data.map((e) => (
              <div class="mx-auto max-w-4xl lg:max-w-5xl font-display container scroller-item">
                <div
                  style={`background: ${e.color};color: ${e.textColor}`}
                  class="p-5 lg:p-10 rounded-2xl h-full"
                >
                  <div class="lg:gap-10 grid lg:grid-cols-[40%_60%] h-full">
                    <div class="flex flex-col">
                      <div class="flex flex-1 items-center">
                        <span
                          style={`border-color: ${e.buttonColor};color: ${e.buttonColor}`}
                          class="flex justify-center items-center border-[#FDB813] border-[1px] mr-5 rounded-full w-12 lg:w-16 h-12 lg:h-16 text-[#FDB813] text-3xl lg:text-5xl shrink-0"
                        >
                          {e.id}
                        </span>
                        <h4 class="font-bold text-3xl lg:text-4xl">
                          {e.title}
                        </h4>
                      </div>
                      <Image
                        width={529}
                        height={362}
                        class="mt-10"
                        src={e.image}
                        alt=""
                      />
                    </div>
