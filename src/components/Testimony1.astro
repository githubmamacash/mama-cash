---
import { Image } from "astro:assets";
import BackgroundNotebook from "../assets/quote/bg.png";
import Quote from "../assets/quote/quote.png";
import { t } from "i18next";
---

<section class="relative isolate mt-12 lg:mt-24">
  <svg
    class="absolute right-0 top-[25%] hidden w-[12%] lg:block"
    viewBox="0 0 274 833"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
